@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/HomePage.css")" rel="stylesheet" />




<div class="rescue-home">
    <div class="hero-banner">
        <div class="hero-content">
            <h1 class="hero-title">RESCUEBUS</h1>
            <p class="hero-tagline">You're better off not dead</p>
            <div class="hero-divider"></div>
            <p class="hero-description">
                A <span class="highlight">real O.K. team</span> here to try and save you.<br>
                If you're still breathing at the hospital, we've done our job!
            </p>
        </div>
    </div>


    <!--For the simple booking section-->
    <div class="action-cards">
        <div class="card booking-card">
            <div class="card-icon">
                <i class="fas fa-ambulance"></i>
            </div>
            <h3>Book Ambulance</h3>
            <p>Schedule non-emergency medical transport</p>
            @Html.ActionLink("BOOK NOW", "SelectService", "RescueBus", null, new { @class = "btn btn-book" })
        </div>


        <!--For the SOS section-->
        <div class="card emergency-card">
            <div class="card-icon">
                <i class="fas fa-plus-circle"></i>
            </div>
            <h3>Emergency SOS</h3>
            <p>Immediate assistance for life-threatening situations</p>
            @Html.ActionLink("EMERGENCY", "EmergencyBooking", "RescueBus", null, new { @class = "btn btn-emergency" })
            <div class="disclaimer">
                <i class="fas fa-exclamation-triangle"></i>
                <span>For real emergencies only</span>
            </div>
        </div>
    </div>
</div>

